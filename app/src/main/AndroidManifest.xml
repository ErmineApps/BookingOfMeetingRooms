<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.kondratkov.bookingofmeetingrooms">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.listroom.ListRoomsActivity"
            android:label="@string/title_activity_list_rooms"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.reservation.ReservationRoom"
            android:label="@string/title_activity_reservation_room"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.reservation.ReservationAddActivity"
            android:label="@string/title_activity_reservation_add"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.bookinghistory.BookingHistory"
            android:label="@string/title_activity_booking_history"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".view.profile.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

        <service
            android:name=".service.MyIntentService"
            android:exported="false">
        </service>

        <activity
            android:name=".view.profile.RegistrationActivity"
            android:label="@string/title_activity_registration"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity android:name=".view.profile.LoginActivity">
        </activity>
    </application>

</manifest>